#!/bin/bash
#
#   [ shocker - docker - transmission/bin/start ]
#


    # require - config
    source `dirname $0`/../CONFIG.sh

    # docker - start
    docker run  -d                                          \
                -p 9091:9091 -p 51413:51413                 \
                -v "$host_config":"$docker_config"          \
                -v "$host_download":"$docker_download"      \
                -v "$host_log":"$docker_log"                \
                --restart=always                            \
                --name "$docker_name"                       \
                "$docker_tag"                               \
                --foreground                                \
                --logfile "$docker_log/transmission.log"    \
                $@


#
#   [ end ]
#
